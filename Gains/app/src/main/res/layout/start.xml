					        android:id="@+id/screenNext"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignParentRight="true"
					        android:layout_alignParentTop="true"
					        android:layout_marginRight="20dp"
					        android:layout_marginTop="20dp"
					        android:background="@drawable/button_selector"
					        android:scaleX="1.5"
					        android:scaleY="1.5"
					        android:src="@drawable/ic_action_forward" />
					
				       
					    <ImageView
					        android:id="@+id/ScreenPrev"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignParentLeft="true"
					        android:layout_alignTop="@+id/screenNext"
					        android:layout_marginLeft="20dp"
					        android:background="@drawable/button_selector"
					        android:scaleX="1.5"
					        android:scaleY="1.5"
					        android:src="@drawable/ic_action_back" />
					
					    <ProgressBar
					        android:id="@+id/progressBar"
					        style="?android:attr/progressBarStyleHorizontal"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignBottom="@+id/ScreenPrev"
					        android:layout_alignTop="@+id/screenNext"
					        android:layout_marginLeft="15dp"
					        android:layout_marginRight="15dp"
					        android:layout_toLeftOf="@+id/screenNext"
					        android:layout_toRightOf="@+id/ScreenPrev" />
					
					    <TextView
					        android:id="@+id/exerciseName"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_below="@+id/progressBar"
					        android:layout_centerHorizontal="true"
					        android:textColor="@color/custom_black"
					        android:textStyle="bold"
					        android:gravity="center_vertical|center_horizontal"
					        android:layout_marginTop="23dp"
					        android:textAppearance="?android:attr/textAppearanceMedium" />
					
					    <ImageView
					        android:id="@+id/weightMinus"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignBottom="@+id/editWeight"
					        android:layout_marginRight="5dp"
					        android:layout_toLeftOf="@+id/editWeight"
					        android:background="@drawable/button_selector"
					        android:clickable="true"
					        android:scaleX="1.3"
					        android:scaleY="1.3"
					        android:src="@drawable/minus" />
					
					    <ImageView
					        android:id="@+id/weightPlus"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignBottom="@+id/editWeight"
					        android:layout_marginLeft="5dp"
					        android:layout_toRightOf="@+id/editWeight"
					        android:background="@drawable/button_selector"
					        android:clickable="true"
					        android:scaleX="1.3"
					        android:scaleY="1.3"
					        android:src="@drawable/plus" />
					
					    <ImageView
					        android:id="@+id/repsPlus"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignBottom="@+id/editReps"
					        android:layout_marginLeft="5dp"
					        android:layout_marginRight="5dp"
					        android:layout_toRightOf="@+id/editReps"
					        android:background="@drawable/button_selector"
					        android:clickable="true"
					        android:scaleX="1.3"
					        android:scaleY="1.3"
					        android:src="@drawable/plus" />
					
					    <ImageView
					        android:id="@+id/repsMinus"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignBottom="@+id/editReps"
					        android:layout_marginRight="5dp"
					        android:layout_toLeftOf="@+id/editReps"
					        android:background="@drawable/button_selector"
					        android:clickable="true"
					        android:scaleX="1.3"
					        android:scaleY="1.3"
					        android:src="@drawable/minus" />
					
					    <TextView
					        android:id="@+id/textReps"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignLeft="@+id/ScreenPrev"
					        android:layout_below="@+id/exerciseName"
					        android:layout_marginTop="5dp"
					        android:text="REPS:"
					        android:textAppearance="?android:attr/textAppearanceSmall"
					        android:textColor="@color/menu"
					        android:textStyle="bold"
					        android:textSize="12sp" />
					
					    <View
					        android:id="@+id/seperator2"
					        android:layout_width="fill_parent"
					        android:layout_height="2dp"
					        android:layout_alignParentLeft="true"
					        android:layout_below="@+id/textReps"
					        android:background="@color/lightest_gray" />
					
					    <EditText
					        android:id="@+id/editReps"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_below="@+id/seperator2"
					        android:layout_centerHorizontal="true"
					        android:layout_marginTop="5dp"
					        android:ems="4"
					        android:gravity="center_vertical|center_horizontal"
					        android:inputType="number"
							android:maxLength="3"
					        android:textColor="@color/custom_black"
					        android:textSize="22sp"
					        android:textStyle="bold" />
					
					    <TextView
					        android:id="@+id/textWeightt"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignLeft="@+id/textReps"
					        android:layout_below="@+id/repsMinus"
					        android:layout_marginTop="17dp"
					        android:text="WEIGHT:"
					        android:textAppearance="?android:attr/textAppearanceSmall"
					        android:textColor="@color/menu"
					        android:textStyle="bold"
					        android:textSize="12sp" />
					
					    <View
					        android:id="@+id/seperator"
					        android:layout_width="fill_parent"
					        android:layout_height="2dp"
					        android:layout_alignParentLeft="true"
					        android:layout_below="@+id/textWeightt"
					        android:background="@color/lightest_gray" />
					
					    <EditText
					        android:id="@+id/editWeight"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_below="@+id/seperator"
					        android:layout_marginTop="5dp"
					        android:layout_toLeftOf="@+id/repsPlus"
					        android:ems="4"
					        android:gravity="center_vertical|center_horizontal"
					        android:inputType="numberDecimal"
					        android:maxLength="6"
					        android:textColor="@color/custom_black"
					        android:textSize="22sp"
					        android:textStyle="bold" />
					
					    <Button
					        android:id="@+id/clear"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignLeft="@+id/progressBar"
					        android:layout_below="@+id/weightMinus"
					        android:layout_marginTop="41dp"
					        android:background="@drawable/start_clear_selector"
					        android:minWidth="90dp"
					        android:width="90dp" />
					
					    <Button
					        android:id="@+id/save"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_alignBaseline="@+id/clear"
					        android:layout_alignBottom="@+id/clear"
					        android:layout_alignRight="@+id/progressBar"
					        android:background="@drawable/start_save_selector"
					        android:minWidth="90dp"
					        android:width="90dp" >
					        
					        <requestFocus />
					        </Button>

					    
					    <View
					        android:id="@+id/space"
					        android:layout_width="fill_parent"
					        android:layout_height="20dp"
					        android:layout_alignParentLeft="true"
					        android:layout_below="@+id/clear"
					        android:background="@android:color/transparent" />
					    
				    
			</RelativeLayout>     
		</LinearLayout>
  </ScrollView>
  
	
	
	
	
	
	
	
	
	
	
	
	
	
	
