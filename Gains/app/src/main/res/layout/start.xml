<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewFlipper"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:fillViewport="true"
	    android:scrollbars="none" >
	
		<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white" >
		
			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:background="@color/white">
			
				<ImageView
		        android:id="@+id/zacScreenNext"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_alignParentTop="true"
		        android:layout_marginRight="20dp"
		        android:layout_marginTop="20dp"
		        android:background="@drawable/button_selector"
		        android:scaleX="1.5"
		        android:scaleY="1.5"
		        android:src="@drawable/ic_action_forward" />
		
		    <ImageView
		        android:id="@+id/zacScreenPrev"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_alignTop="@+id/zacScreenNext"
		        android:layout_marginLeft="20dp"
		        android:background="@drawable/button_selector"
		        android:scaleX="1.5"
		        android:scaleY="1.5"
		        android:src="@drawable/ic_action_back" />
		
		    <ProgressBar
		        android:id="@+id/zacProgressBar"
		        style="?android:attr/progressBarStyleHorizontal"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@+id/zacScreenPrev"
		        android:layout_alignTop="@+id/zacScreenNext"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:layout_toLeftOf="@+id/zacScreenNext"
		        android:layout_toRightOf="@+id/zacScreenPrev" />
		
		    <View
		        android:id="@+id/zacSeperator"
		        android:layout_width="fill_parent"
		        android:layout_height="2dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@+id/add_routine_name"
		        android:background="@color/light_gray" />
		
		    <View
		        android:id="@+id/zacView"
		        android:layout_width="fill_parent"
		        android:layout_height="2dp"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:background="@color/light_gray" />
		
		    <TextView
		        android:id="@+id/add_routine_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/zacScreenPrev"
		        android:layout_below="@+id/zacScreenPrev"
		        android:layout_marginTop="35dp"
		        android:text="SELECT ROUTINE:"
		        android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@color/menu"
		        android:textStyle="bold"
		        android:textSize="12sp" />

		    <Spinner
		        android:id="@+id/spinner"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/add_routine_name"
		        android:layout_alignRight="@+id/zacScreenNext"
		        android:layout_below="@+id/zacSeperator"
		        android:layout_marginTop="16dp" />

		    <TextView
		        android:id="@+id/warning"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignLeft="@+id/spinner"
		        android:layout_alignRight="@+id/spinner"
		        android:layout_below="@+id/spinner"
		        android:layout_marginLeft="10dp"
		        android:textAppearance="?android:attr/textAppearanceSmall"
		        android:textColor="@color/gray"
		        android:textSize="13sp" />
				    
			</RelativeLayout>     
		</LinearLayout>
  </ScrollView>
  
    
    
    
    
    
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:fillViewport="true"
	    android:scrollbars="none" >
	
		<LinearLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white" >
		
			<RelativeLayout
			    android:id="@+id/rlayout"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:background="@color/white">
			
