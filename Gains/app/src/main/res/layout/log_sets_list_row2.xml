<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rel_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:background="@color/white"
     android:descendantFocusability="blocksDescendants"     >
  <!--  -->
 
    <TextView
        android:id="@+id/log_set2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="1 Set"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/custom_black"
        android:textStyle="bold"
        android:width="100dp" />

   <TextView
       android:id="@+id/log_duration"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/log_set2"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:layout_marginRight="25dp"
       android:layout_marginTop="5dp"
       android:gravity="center"
       android:textAppearance="?android:attr/textAppearanceSmall"
       android:textColor="@color/custom_black"
       android:textStyle="bold"
       android:width="100dp" />

   <TextView
       android:id="@+id/log_distance"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_marginTop="5dp"
       android:layout_toLeftOf="@+id/log_duration"
       android:layout_toRightOf="@+id/log_set2"
       android:gravity="center"
       android:textAppearance="?android:attr/textAppearanceSmall"
       android:textColor="@color/custom_black"
       android:textStyle="bold"
       android:width="100dp" />

   <ImageView
       android:id="@+id/log_image"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/log_set2"
       android:layout_alignLeft="@+id/log_set2"
       android:layout_alignTop="@+id/log_set2" />

</RelativeLayout>

