<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="15dp"

    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Stopwatch"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="@color/PrimaryColor"
        android:layout_marginTop="15dp"/>

    <View
        android:id="@+id/chronoSeperator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignEnd="@+id/listView"
        android:focusable="true"
        android:clickable="true"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/header"
        android:background="@color/lighter_gray" />



        <Chronometer
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/chronometer"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="00:00:01"
            android:format="00:00:01"
            android:layout_below="@+id/chronoSeperator"
            android:numeric="integer"
            android:textStyle="bold"
            android:textColor="@color/DarkColor"
            android:textSize="50sp"
            android:textIsSelectable="false"
            android:focusable="false"
            android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/chronometer">

        <Button
            android:id="@+id/start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_effect"
            android:layout_below="@+id/editWeight"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_centerHorizontal="true"
            android:minWidth="90dp"
            android:width="90dp"
            android:layout_weight="1"
            android:text="START"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_below="@+id/chronometer">

    <Button
        android:id="@+id/stop_resume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_effect_red"
        android:layout_below="@+id/editWeight"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true"
        android:minWidth="90dp"
        android:width="90dp"
        android:layout_weight="1"
        android:text="STOP"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/reset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_effect_gray"
        android:layout_below="@+id/editWeight"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true"
        android:minWidth="90dp"
        android:width="90dp"
        android:layout_weight="1"
        android:text="RESET"
        android:textColor="@color/white"
        android:textStyle="bold"/>
</LinearLayout>


</RelativeLayout>