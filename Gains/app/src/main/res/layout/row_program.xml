<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/rel_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingTop="5dp"
        android:layout_toLeftOf="@+id/edit_btn"
        android:text="Routine name"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/show2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingBottom="8dp"
        android:layout_below="@id/show"
        android:text="5 exercises"
        android:textColor="@color/gray"
        android:textAlignment="textStart"
        android:gravity="start"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textIsSelectable="false" />

    <com.malinskiy.materialicons.widget.IconTextView
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/show"
        android:paddingTop="15dp"
        android:paddingRight="5dp"
        android:layout_alignBottom="@+id/show2"
        android:layout_alignParentRight="true"
        android:focusableInTouchMode="false"
        android:text="{zmdi-more-vert}"
        android:textSize="30sp"
        android:textIsSelectable="false" />

</RelativeLayout>

